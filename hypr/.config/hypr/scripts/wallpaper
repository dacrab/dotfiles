#!/bin/bash

# =============================================================================
# WALLPAPER MANAGEMENT SCRIPT
# =============================================================================
# A unified script for managing wallpapers in Hyprland
# 
# Usage:
#   wallpaper cycle     - Cycle to the next wallpaper
#   wallpaper restore   - Restore the last wallpaper on startup
#   wallpaper list      - List available wallpapers
#   wallpaper current   - Show current wallpaper
#   wallpaper set <path> - Set a specific wallpaper
#
# Author: dacrab
# =============================================================================

# Configuration
WALLPAPER_DIR="$HOME/Pictures/wallpapers/nord-background"
LAST_WP_FILE="$HOME/.config/hypr/configs/last_wallpaper"
SUPPORTED_FORMATS="*.png *.jpg *.jpeg *.webp"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# =============================================================================
# UTILITY FUNCTIONS
# =============================================================================

# Print colored output
print_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1" >&2
}

# Get list of available wallpapers
get_wallpapers() {
    mapfile -t WALLPAPERS < <(find "$WALLPAPER_DIR" -type f \( -iname "*.png" -o -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.webp" \) | sort)
    echo "${WALLPAPERS[@]}"
}

# Get current monitor name
get_monitor() {
    local monitor=$(hyprctl monitors | grep "Monitor" | head -n1 | cut -d' ' -f2 | tr -d '"')
    if [ -z "$monitor" ]; then
        monitor="HDMI-A-1"
        print_warning "Could not detect monitor, using fallback: $monitor"
    fi
    echo "$monitor"
}

# Wait for hyprpaper to be ready
wait_for_hyprpaper() {
    local max_attempts=20
    local attempt=0
    
    while [ $attempt -lt $max_attempts ]; do
        if hyprctl hyprpaper listactive >/dev/null 2>&1; then
            return 0
        fi
        attempt=$((attempt + 1))
        sleep 0.5
    done
    
    print_error "Timeout waiting for hyprpaper to be ready"
    return 1
}

# Set wallpaper with error handling
set_wallpaper() {
    local wallpaper_path="$1"
    local monitor="$2"
    
    # Preload wallpaper
    hyprctl hyprpaper preload "$wallpaper_path" >/dev/null 2>&1
    
    # Set wallpaper with retry logic
    local attempts=0
    local max_attempts=5
    
    while [ $attempts -lt $max_attempts ]; do
        if hyprctl hyprpaper wallpaper "$monitor,$wallpaper_path" >/dev/null 2>&1; then
            # Generate Material You colors from the wallpaper
            generate_colors "$wallpaper_path"
            return 0
        fi
        attempts=$((attempts + 1))
        sleep 0.5
    done
    
    print_error "Failed to set wallpaper after $max_attempts attempts"
    return 1
}

# Generate Material You colors from wallpaper
generate_colors() {
    local wallpaper_path="$1"
    
    print_info "Generating Material You colors from wallpaper..."
    
    # Generate colors using matugen
    if matugen image "$wallpaper_path" --mode dark --type scheme-tonal-spot >/dev/null 2>&1; then
        print_success "Material You colors generated successfully"
        
        # Reload Hyprland to apply new colors
        if hyprctl reload >/dev/null 2>&1; then
            print_success "Hyprland configuration reloaded with new colors"
        else
            print_warning "Failed to reload Hyprland configuration"
        fi
    else
        print_warning "Failed to generate Material You colors"
    fi
}

# =============================================================================
# WALLPAPER FUNCTIONS
# =============================================================================

# Cycle to the next wallpaper
cycle_wallpaper() {
    print_info "Cycling wallpaper..."
    
    # Get available wallpapers
    local wallpapers=($(get_wallpapers))
    
    if [ ${#wallpapers[@]} -eq 0 ]; then
        print_error "No wallpapers found in $WALLPAPER_DIR"
        print_info "Supported formats: $SUPPORTED_FORMATS"
        exit 1
    fi
    
    print_info "Found ${#wallpapers[@]} wallpapers"
    
    # Get current wallpaper
    local current_wp=$(hyprctl hyprpaper listactive 2>/dev/null | grep -o '/home.*' | head -n1)
    
    if [ -z "$current_wp" ]; then
        if [ -f "$LAST_WP_FILE" ]; then
            current_wp=$(cat "$LAST_WP_FILE")
            print_info "Loaded last wallpaper from file: $(basename "$current_wp")"
        else
            current_wp="${wallpapers[0]}"
            print_info "No current wallpaper, using first: $(basename "$current_wp")"
        fi
    fi
    
    # Find current wallpaper index
    local current_index=-1
    for i in "${!wallpapers[@]}"; do
        if [ "${wallpapers[i]}" = "$current_wp" ]; then
            current_index=$i
            break
        fi
    done
    
    # If not found, use first wallpaper
    if [ $current_index -eq -1 ]; then
        current_index=0
        print_warning "Current wallpaper not in list, using first"
    fi
    
    # Calculate next wallpaper index
    local next_index=$(( (current_index + 1) % ${#wallpapers[@]} ))
    local next_wp="${wallpapers[$next_index]}"
    
    print_info "Cycling from $(basename "$current_wp") to $(basename "$next_wp")"
    
    # Save next wallpaper to file
    echo "$next_wp" > "$LAST_WP_FILE"
    
    # Get monitor and set wallpaper
    local monitor=$(get_monitor)
    if set_wallpaper "$next_wp" "$monitor"; then
        print_success "Wallpaper cycled successfully"
    else
        print_error "Failed to cycle wallpaper"
        exit 1
    fi
}

# Restore the last wallpaper (for startup)
restore_wallpaper() {
    print_info "Restoring last wallpaper..."
    
    # Wait for hyprpaper to be ready
    if ! wait_for_hyprpaper; then
        print_error "hyprpaper not ready, exiting"
        exit 1
    fi
    
    # Check if last wallpaper file exists
    if [ ! -f "$LAST_WP_FILE" ]; then
        print_warning "No last wallpaper file found"
        return 0
    fi
    
    local last_wp=$(cat "$LAST_WP_FILE")
    print_info "Restoring: $(basename "$last_wp")"
    
    # Check if the wallpaper file exists
    if [ ! -f "$last_wp" ]; then
        print_warning "Last wallpaper file does not exist: $last_wp"
        return 0
    fi
    
    # Get monitor and set wallpaper
    local monitor=$(get_monitor)
    if set_wallpaper "$last_wp" "$monitor"; then
        print_success "Wallpaper restored successfully"
    else
        print_error "Failed to restore wallpaper"
        exit 1
    fi
}

# List available wallpapers
list_wallpapers() {
    print_info "Available wallpapers in $WALLPAPER_DIR:"
    echo
    
    local wallpapers=($(get_wallpapers))
    
    if [ ${#wallpapers[@]} -eq 0 ]; then
        print_warning "No wallpapers found"
        print_info "Supported formats: $SUPPORTED_FORMATS"
        return 1
    fi
    
    for i in "${!wallpapers[@]}"; do
        local wp="${wallpapers[i]}"
        local basename_wp=$(basename "$wp")
        echo "  $((i+1)). $basename_wp"
    done
    
    echo
    print_info "Total: ${#wallpapers[@]} wallpapers"
}

# Show current wallpaper
show_current() {
    local current_wp=$(hyprctl hyprpaper listactive 2>/dev/null | grep -o '/home.*' | head -n1)
    
    if [ -n "$current_wp" ]; then
        print_info "Current wallpaper: $(basename "$current_wp")"
        echo "  Path: $current_wp"
    else
        print_warning "No wallpaper currently set"
    fi
}

# Set a specific wallpaper
set_specific_wallpaper() {
    local wallpaper_path="$1"
    
    if [ -z "$wallpaper_path" ]; then
        print_error "No wallpaper path provided"
        return 1
    fi
    
    if [ ! -f "$wallpaper_path" ]; then
        print_error "Wallpaper file does not exist: $wallpaper_path"
        return 1
    fi
    
    print_info "Setting wallpaper: $(basename "$wallpaper_path")"
    
    # Save to last wallpaper file
    echo "$wallpaper_path" > "$LAST_WP_FILE"
    
    # Get monitor and set wallpaper
    local monitor=$(get_monitor)
    if set_wallpaper "$wallpaper_path" "$monitor"; then
        print_success "Wallpaper set successfully"
    else
        print_error "Failed to set wallpaper"
        exit 1
    fi
}

# =============================================================================
# MAIN SCRIPT
# =============================================================================

# Show usage if no arguments
if [ $# -eq 0 ]; then
    echo "Usage: $0 {cycle|restore|list|current|set <path>}"
    echo
    echo "Commands:"
    echo "  cycle     - Cycle to the next wallpaper"
    echo "  restore   - Restore the last wallpaper (for startup)"
    echo "  list      - List available wallpapers"
    echo "  current   - Show current wallpaper"
    echo "  set <path> - Set a specific wallpaper"
    echo
    echo "Configuration:"
    echo "  Wallpaper directory: $WALLPAPER_DIR"
    echo "  Last wallpaper file: $LAST_WP_FILE"
    exit 1
fi

# Parse command
case "$1" in
    "cycle")
        cycle_wallpaper
        ;;
    "restore")
        restore_wallpaper
        ;;
    "list")
        list_wallpapers
        ;;
    "current")
        show_current
        ;;
    "set")
        set_specific_wallpaper "$2"
        ;;
    *)
        print_error "Unknown command: $1"
        echo "Use '$0' to see available commands"
        exit 1
        ;;
esac

#!/bin/bash

# =============================================================================
# WALLPAPER MANAGEMENT SCRIPT
# =============================================================================
# A unified script for managing wallpapers in Hyprland
# 
# Usage:
#   wallpaper cycle     - Cycle to the next wallpaper
#   wallpaper list      - List available wallpapers
#   wallpaper current   - Show current wallpaper
#   wallpaper set <path> - Set a specific wallpaper
#   wallpaper sync      - Sync current wallpaper to all monitors
#
# Author: dacrab
# =============================================================================

# Configuration
readonly WALLPAPER_DIR="$HOME/Pictures/wallpapers/nord-background"
readonly HYPERPAPER_CONF="$HOME/.config/hyprpaper/hyprpaper.conf"
readonly SUPPORTED_FORMATS=("*.png" "*.jpg" "*.jpeg" "*.webp")
readonly MAX_ATTEMPTS=5

# Colors for output
readonly RED='\033[0;31m'
readonly GREEN='\033[0;32m'
readonly YELLOW='\033[1;33m'
readonly BLUE='\033[0;34m'
readonly NC='\033[0m'

# =============================================================================
# UTILITY FUNCTIONS
# =============================================================================

print_info() { echo -e "${BLUE}[INFO]${NC} $1"; }
print_success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
print_warning() { echo -e "${YELLOW}[WARNING]${NC} $1"; }
print_error() { echo -e "${RED}[ERROR]${NC} $1" >&2; }

get_wallpapers() {
    find "$WALLPAPER_DIR" -type f \( -iname "*.png" -o -iname "*.jpg" -o -iname "*.jpeg" -o -iname "*.webp" \) | sort
}

get_all_monitors() {
    hyprctl monitors | grep "Monitor" | cut -d' ' -f2 | tr -d '":' | grep -v "^$"
}

# hyprpaper is expected to be started by autostart with -c $HYPERPAPER_CONF

write_hyprpaper_config() {
    local wallpaper_path="$1"
    local config_dir
    config_dir="$(dirname "$HYPERPAPER_CONF")"

    mkdir -p "$config_dir"

    local monitors
    mapfile -t monitors < <(get_all_monitors)

    if (( ${#monitors[@]} == 0 )); then
        print_error "No monitors detected for config write"
        return 1
    fi

    local tmp_file
    tmp_file="${HYPERPAPER_CONF}.tmp"

    echo "preload = $wallpaper_path" > "$tmp_file"
    for monitor in "${monitors[@]}"; do
        echo "wallpaper = $monitor,$wallpaper_path" >> "$tmp_file"
    done

    mv "$tmp_file" "$HYPERPAPER_CONF"
    print_success "Updated hyprpaper config: $HYPERPAPER_CONF"
}

apply_wallpaper_all_monitors() {
    local wallpaper_path="$1"
    local attempt=0
    local success_count=0
    local total_monitors=0
    
    # Get all enabled monitors
    local monitors
    mapfile -t monitors < <(get_all_monitors)
    
    if (( ${#monitors[@]} == 0 )); then
        print_error "No monitors detected"
        return 1
    fi
    
    total_monitors=${#monitors[@]}
    print_info "Applying wallpaper to $total_monitors monitor(s): ${monitors[*]}"
    
    # Preload wallpaper
    hyprctl hyprpaper preload "$wallpaper_path" &>/dev/null
    
    # Apply wallpaper to all monitors
    for monitor in "${monitors[@]}"; do
        attempt=0
        while (( attempt < MAX_ATTEMPTS )); do
            if hyprctl hyprpaper wallpaper "$monitor,$wallpaper_path" &>/dev/null; then
                print_success "✅ Applied to $monitor"
                ((success_count++))
                break
            fi
            ((attempt++))
            sleep 0.2
        done
        
        if (( attempt >= MAX_ATTEMPTS )); then
            print_error "❌ Failed to apply to $monitor after $MAX_ATTEMPTS attempts"
        fi
    done
    
    if (( success_count == total_monitors )); then
        print_success "Wallpaper applied to all $total_monitors monitor(s)"
        return 0
    elif (( success_count > 0 )); then
        print_warning "Wallpaper applied to $success_count/$total_monitors monitor(s)"
        return 0
    else
        print_error "Failed to apply wallpaper to any monitor"
        return 1
    fi
}

get_current_wallpaper() {
    hyprctl hyprpaper listactive 2>/dev/null | grep -o '/home.*' | head -n1
}

# last-wallpaper persistence removed; hyprpaper.conf is the source of truth

# Regenerate Hyprland colors via matugen and update Starship, then reload Hyprland
regenerate_theme_colors() {
    local wallpaper_path="$1"
    local starship_script="$HOME/.config/hypr/scripts/generate_starship_colors"

    if command -v matugen >/dev/null 2>&1; then
        print_info "Generating Material You colors via matugen..."
        if matugen image "$wallpaper_path" --mode dark --type scheme-tonal-spot &>/dev/null; then
            print_success "Matugen colors generated"
        else
            print_warning "Matugen failed to generate colors"
        fi
    else
        print_warning "matugen not found in PATH"
    fi

    if [[ -x "$starship_script" ]]; then
        "$starship_script" &>/dev/null && print_success "Starship colors updated"
    fi

    hyprctl reload &>/dev/null && print_success "Hyprland configuration reloaded"
}

# =============================================================================
# WALLPAPER FUNCTIONS
# =============================================================================

cycle_wallpaper() {
    print_info "Cycling wallpaper..."
    
    local wallpapers
    mapfile -t wallpapers < <(get_wallpapers)
    
    if (( ${#wallpapers[@]} == 0 )); then
        print_error "No wallpapers found in $WALLPAPER_DIR"
        print_info "Supported formats: ${SUPPORTED_FORMATS[*]}"
        return 1
    fi

    print_info "Found ${#wallpapers[@]} wallpapers"
    
    # Get current wallpaper
    local current_wp
    current_wp=$(get_current_wallpaper)
    
    if [[ -z "$current_wp" ]]; then
        current_wp="${wallpapers[0]}"
        print_info "Using first wallpaper: $(basename "$current_wp")"
    fi
    
    # Find next wallpaper
    local current_index=-1
    for i in "${!wallpapers[@]}"; do
        if [[ "${wallpapers[i]}" == "$current_wp" ]]; then
            current_index=$i
            break
        fi
    done
    
    local next_index=$(( (current_index + 1) % ${#wallpapers[@]} ))
    local next_wp="${wallpapers[$next_index]}"
    
    print_info "Cycling to: $(basename "$next_wp")"
    
    apply_wallpaper_all_monitors "$next_wp"
    write_hyprpaper_config "$next_wp"
    regenerate_theme_colors "$next_wp"
}

# restore flow removed; hyprpaper.conf handles persistence

list_wallpapers() {
    print_info "Available wallpapers in $WALLPAPER_DIR:"
    echo
    local wallpapers
    mapfile -t wallpapers < <(get_wallpapers)
    
    if (( ${#wallpapers[@]} == 0 )); then
        print_warning "No wallpapers found"
        print_info "Supported formats: ${SUPPORTED_FORMATS[*]}"
        return 1
    fi
    
    for i in "${!wallpapers[@]}"; do
        echo "  $((i+1)). $(basename "${wallpapers[i]}")"
    done
    
    echo
    print_info "Total: ${#wallpapers[@]} wallpapers"
}

show_current() {
    local current_wp
    current_wp=$(get_current_wallpaper)
    
    if [[ -n "$current_wp" ]]; then
        print_info "Current wallpaper: $(basename "$current_wp")"
        echo "  Path: $current_wp"
    else
        print_warning "No wallpaper currently set"
    fi
}

set_specific_wallpaper() {
    local wallpaper_path="$1"
    
    if [[ -z "$wallpaper_path" ]]; then
        print_error "No wallpaper path provided"
        return 1
    fi
    
    if [[ ! -f "$wallpaper_path" ]]; then
        print_error "Wallpaper file does not exist: $wallpaper_path"
        return 1
    fi
    
    print_info "Setting wallpaper: $(basename "$wallpaper_path")"
    apply_wallpaper_all_monitors "$wallpaper_path"
    write_hyprpaper_config "$wallpaper_path"
    regenerate_theme_colors "$wallpaper_path"
}

sync_all_monitors() {
    print_info "Syncing wallpaper to all enabled monitors..."
    
    local current_wp
    current_wp=$(get_current_wallpaper)
    
    if [[ -z "$current_wp" ]]; then
        print_warning "No current wallpaper detected"
        return 0
    fi
    
    print_info "Syncing: $(basename "$current_wp")"
    apply_wallpaper_all_monitors "$current_wp"
    write_hyprpaper_config "$current_wp"
    regenerate_theme_colors "$current_wp"
}

show_usage() {
    echo "Usage: $0 {cycle|list|current|set <path>|sync}"
    echo
    echo "Commands:"
    echo "  cycle      - Cycle to the next wallpaper"
    echo "  list       - List available wallpapers"
    echo "  current    - Show current wallpaper"
    echo "  set <path> - Set a specific wallpaper"
    echo "  sync       - Sync current wallpaper to all enabled monitors"
    echo
    echo "Configuration:"
    echo "  Wallpaper directory: $WALLPAPER_DIR"
    echo "  Hyprpaper config: $HYPERPAPER_CONF"
}

# =============================================================================
# MAIN SCRIPT
# =============================================================================

if (( $# == 0 )); then
    show_usage
    exit 1
fi

case "$1" in
    cycle)      cycle_wallpaper ;;
    list)       list_wallpapers ;;
    current)    show_current ;;
    set)        set_specific_wallpaper "$2" ;;
    sync)       sync_all_monitors ;;
    *)          print_error "Unknown command: $1"
                echo "Use '$0' to see available commands"
                exit 1 ;;
esac
